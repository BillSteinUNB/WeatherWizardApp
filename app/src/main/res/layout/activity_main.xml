<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background = "@drawable/background">


    <TextView
        android:id="@+id/textViewTitle"
        android:layout_width="wrap_content"
        android:layout_height="58dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/weatherfont"
        android:text="Weather Wizard"
        android:textSize="30sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonLaunch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/guideLine"
        android:layout_marginRight="19dp"
        android:layout_marginBottom="126dp"
        android:layout_toLeftOf="@+id/guideLine"
        android:background="#80FF0000"
        android:fontFamily="@font/weatherfont"
        android:text="Launch"
        android:textColor="#000000"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/guideLine"
        android:layout_marginLeft="19dp"
        android:layout_marginBottom="126dp"
        android:layout_toRightOf="@+id/guideLine"
        android:background="#80FF0000"
        android:textSize="20sp"
        android:fontFamily="@font/weatherfont"
        android:text="Settings"
        android:textColor="#000000" />

    <View
        android:id="@+id/guideLine"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/spaceBottom"/>

    <Space
        android:id="@+id/spaceBottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
